  },
  "dependencies": {
    "@objectdocs/site": "workspace:*",
    "@types/node": "^25.2.2",
    "cac": "^6.7.14",
    "dotenv": "^16.4.5",
    "openai": "^6.18.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "vitest": "^4.0.18"
  }
